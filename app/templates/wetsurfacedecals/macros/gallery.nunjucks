{% macro gallery_carousel_internal(id, items) %}
    <div id="{{ id }}" class="carousel slide" data-ride="carousel">

    <!-- Indicators -->
    <ol class="carousel-indicators">
        {% set gallery_carousel_items_counter = 0 %}
        {% for lst in items %}
            <li data-target="#{{ id }}" data-slide-to="{{ gallery_carousel_items_counter }}" {% if gallery_carousel_items_counter == 0 %}class="active"{% endif %}></li>
            {% set gallery_carousel_items_counter = gallery_carousel_items_counter + 1 %}
        {% endfor %}
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">

        {% set gallery_carousel_items_counter = 0 %}
        {% for item in items %}
            <div class="item {% if gallery_carousel_items_counter == 0 %}active{% endif %}">
                <img srcset="{{ item.huge }} 1920w,
                             {{ item.large }} 768w,
                             {{ item.medium }} 512w,
                             {{ item.small }} 256w"
                     sizes="95vw"
                     src="{{ item.medium }}"
                     alt="{{ item.alt }}"
                />
                <div class="carousel-caption">
                    {{ item.alt }}
                </div>
            </div>

            {% set gallery_carousel_items_counter = gallery_carousel_items_counter + 1 %}
        {% endfor %}

    </div>

    <!-- Controls -->
    <a class="left carousel-control" href="#{{ id }}" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#{{ id }}" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    </div>
{% endmacro %}

